/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define ACCEL_SCALE 0b11 //00 = 2g, 01 = 4g, 10 = 8g, 11 = 16g
#define GYRO_SCALE 0b11  //00 = 250dps, 01 = 500dps, 10 = 1000dps, 11 = 2000dps
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

/* USER CODE BEGIN PV */
uint8_t data;
uint8_t tx_data[2];
uint8_t rx_byte[2];
uint8_t rx_data2;
uint8_t storage[14];
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
/* USER CODE BEGIN PFP */
uint8_t spi_read(uint8_t reg_address)
{

    HAL_GPIO_WritePin(SPI__CS_GPIO_Port, SPI__CS_Pin, GPIO_PIN_RESET);

    tx_data[0] = reg_address | 0x80;
    tx_data[1] = 0x55;

    HAL_SPI_TransmitReceive(&hspi1, tx_data, rx_byte, 2, 30);


    HAL_GPIO_WritePin(SPI__CS_GPIO_Port, SPI__CS_Pin, GPIO_PIN_SET);

    return rx_byte[1];
}

 void spi_write(uint8_t *reg_address, uint8_t *data)
{
	  HAL_GPIO_WritePin(SPI__CS_GPIO_Port, SPI__CS_Pin, GPIO_PIN_RESET);

	  HAL_SPI_Transmit(&hspi1, reg_address, 1, 30);

	  HAL_SPI_Transmit(&hspi1, data, 1 , 30);

	    HAL_GPIO_WritePin(SPI__CS_GPIO_Port, SPI__CS_Pin, GPIO_PIN_SET);
}

 void spi_read_uninterrupt(uint8_t reg_address, address_count, storage)
 {

	    HAL_GPIO_WritePin(SPI__CS_GPIO_Port, SPI__CS_Pin, GPIO_PIN_RESET);

	    uint8_t tx_data = reg_address | 0x80;

	    for(int i = 0; i < address_count; i+= 1)
	    {
	    HAL_SPI_TransmitReceive(&hspi1, tx_data, storage[i], 1, 30);
	    }

	    HAL_GPIO_WritePin(SPI__CS_GPIO_Port, SPI__CS_Pin, GPIO_PIN_SET);

	    return rx_byte[1];
 }
/* USER CODE END PFP */

